<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="MAUI_App.MainPage">  

   <Grid RowDefinitions="Auto, Auto, *" ColumnDefinitions="*">  
       <!-- Entry for URL input -->
        <Grid ColumnDefinitions="Auto,Auto,*, Auto" Margin="0,0,0,0" Padding="10" >
            <Button Grid.Column="0" x:Name="historyBackBtn" FontSize="Medium" Text="🠸" Margin="5,0" Clicked="historyBackBtn_Clicked"/>
            <Button Grid.Column="1" x:Name="historyForwardBtn"  FontSize="Medium" Text="🠺" Margin="5,0,10,0" Clicked="historyForwardBtn_Clicked" />
            <Entry BackgroundColor="{StaticResource White}" Grid.Column="2" Text="https://www.google.de" x:Name="UrlInput" TextChanged="UrlInput_TextChanged" Completed="UrlInput_Completed" HorizontalOptions="FillAndExpand" />
            <Button Grid.Column="3" x:Name="faviBtn" Text="★" Margin="10,0,0,0" FontSize="Small" Clicked="faviBtn_Clicked"/>
        </Grid>
       
        <BoxView 
            HorizontalOptions="FillAndExpand" 
            HeightRequest="2" 
            BackgroundColor="{StaticResource Gray200}" Grid.Row="1">
            
        </BoxView>
       
       <!-- WebView that expands automatically -->  
       <WebView Margin="0,10" Grid.Row="2" Source="https://www.google.de" x:Name="MainWebView" VerticalOptions="FillAndExpand" Navigated="MainWebView_Loaded" />  

       <!-- Buttons at the bottom -->  
   </Grid>  
</ContentPage>
